{
  "name": "xdc-subnet-contracts",
  "version": "1.1.0",
  "description": "Smart contract development for XDC Subnet",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat ignition deploy ./ignition/modules/NetworkManager.ts --network subnet",
    "deploy:verify": "hardhat ignition deploy ./ignition/modules/NetworkManager.ts --network subnet --verify",
    "deploy:reset": "hardhat ignition deploy ./ignition/modules/NetworkManager.ts --network subnet --reset",
    "interact": "hardhat run scripts/hardhat-interact.ts --network subnet",
    "test": "hardhat test",
    "node": "hardhat node"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.16",
    "typescript": "~5.8.0",
    "viem": "^2.40.3"
  }
}
